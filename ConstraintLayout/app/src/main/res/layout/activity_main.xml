<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout1"
        app:layout_constraintBottom_toTopOf="@id/constraintlayout2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FF9800"
            android:gravity="center"
            android:text="A"
            android:textColor="#FF5722"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@id/textview2"
            app:layout_constraintLeft_toLeftOf="@id/constraintlayout1"
            app:layout_constraintRight_toRightOf="@id/constraintlayout1"
            app:layout_constraintTop_toTopOf="@id/constraintlayout1" />

            <TextView
                android:id="@+id/textview2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#FFC107"
                android:gravity="center"
                android:text="B"
                android:textColor="#FF5722"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@id/textview3"
                app:layout_constraintLeft_toLeftOf="@id/constraintlayout1"
                app:layout_constraintRight_toRightOf="@id/constraintlayout1"
                app:layout_constraintTop_toBottomOf="@id/textview1" />

            <TextView
                android:id="@+id/textview3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#9C27B0"
                android:gravity="center"
                android:text="C"
                android:textColor="#FF5722"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@id/textview4"
                app:layout_constraintLeft_toLeftOf="@id/constraintlayout1"
                app:layout_constraintRight_toRightOf="@id/constraintlayout1"
                app:layout_constraintTop_toBottomOf="@id/textview2" />

        <TextView
            android:id="@+id/textview4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#009688"
            android:gravity="center"
            android:text="D"
            android:textColor="#FF5722"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/constraintlayout1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/constraintlayout1"
            app:layout_constraintRight_toRightOf="@id/constraintlayout1"
            app:layout_constraintTop_toBottomOf="@id/textview3"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintlayout1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/constraintlayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:background="#FF9800"
            android:gravity="center"
            android:text="A"
            android:textSize="30sp"
            android:textColor="#9C27B0"
            android:id="@+id/text1"
            app:layout_constraintRight_toLeftOf="@id/text2"
            app:layout_constraintTop_toTopOf="@id/constraintlayout2"
            app:layout_constraintBottom_toBottomOf="@id/constraintlayout2"
            app:layout_constraintLeft_toLeftOf="@id/constraintlayout2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/text2"
            android:background="#8BC34A"
            android:gravity="center"
            android:textSize="30sp"
            android:text="B"
            app:layout_constraintTop_toTopOf="@id/constraintlayout2"
            app:layout_constraintBottom_toBottomOf="@id/constraintlayout2"
            app:layout_constraintLeft_toRightOf="@id/text1"
            app:layout_constraintRight_toLeftOf="@id/text3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/text3"
            android:background="#FFC107"
            android:gravity="center"
            android:textSize="30sp"
            android:text="C"
            app:layout_constraintTop_toTopOf="@id/constraintlayout2"
            app:layout_constraintBottom_toBottomOf="@id/constraintlayout2"
            app:layout_constraintLeft_toRightOf="@id/text2"
            android:layout_width="0dp"
            app:layout_constraintRight_toLeftOf="@id/text4"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/text4"
            android:background="#F44336"
            android:gravity="center"
            android:textSize="30sp"
            android:text="D"
            app:layout_constraintRight_toRightOf="@id/constraintlayout2"
            app:layout_constraintTop_toTopOf="@id/constraintlayout2"
            app:layout_constraintBottom_toBottomOf="@id/constraintlayout2"
            app:layout_constraintLeft_toRightOf="@id/text3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>




    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>